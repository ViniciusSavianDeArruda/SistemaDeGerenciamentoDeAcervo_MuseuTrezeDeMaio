<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.museu.controller.PeriodicoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button onAction="#onBtnVoltarClick" text="&lt; Voltar" />
        <Label text="Gerenciamento de Periódicos (Revistas/Jornais)">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </HBox>

    <VBox spacing="10.0" style="-fx-border-color: #ccc; -fx-padding: 10; -fx-background-color: #e8f8f5;">
        <Label text="Novo Periódico" style="-fx-font-weight: bold;"/>

        <HBox spacing="10.0">
            <VBox HBox.hgrow="ALWAYS">
                <Label text="Título:" />
                <TextField fx:id="txtTitulo" promptText="Ex: Revista National Geographic" />
            </VBox>

            <VBox prefWidth="200.0">
                <Label text="Doador:" />
                <ComboBox fx:id="cbDoador" prefWidth="200.0" promptText="Selecione..." />
            </VBox>

            <VBox prefWidth="150.0">
                <Label text="ISSN:" />
                <TextField fx:id="txtISSN" promptText="1234-5678" />
            </VBox>
        </HBox>

        <HBox spacing="10.0">
            <VBox prefWidth="150.0">
                <Label text="Periodicidade:" />
                <ComboBox fx:id="cbPeriodicidade" prefWidth="150.0" promptText="Selecione..." />
            </VBox>
            <VBox>
                <Label text="Início Publicação:" />
                <DatePicker fx:id="dtInicio" />
            </VBox>
            <VBox>
                <Label text="Data Aquisição:" />
                <DatePicker fx:id="dtAquisicao" />
            </VBox>
        </HBox>

        <Button fx:id="btnSalvar" onAction="#onBtnSalvarClick" text="Salvar Periódico" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>

    <TableView fx:id="tabelaPeriodicos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="300.0" />
            <TableColumn fx:id="colDoador" text="Doador" prefWidth="150.0" /> <TableColumn fx:id="colISSN" text="ISSN" prefWidth="120.0" />
            <TableColumn fx:id="colPeriodicidade" text="Periodicidade" prefWidth="120.0" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnExcluir" text="Excluir Selecionado" onAction="#onBtnExcluirClick" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
    </HBox>
</VBox>