<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.museu.controller.SerieController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button onAction="#onBtnVoltarClick" text="&lt; Voltar" />
        <Label text="Gerenciamento de Séries/Coleções">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </HBox>

    <VBox spacing="10.0" style="-fx-border-color: #ccc; -fx-padding: 10; -fx-background-color: #eaf2f8;">
        <Label text="Nova Série" style="-fx-font-weight: bold;"/>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Nome da Série:" />
            <TextField fx:id="txtNome" prefWidth="300.0" promptText="Ex: Coleção Vagalume, Harry Potter..." />
            <Button fx:id="btnSalvar" onAction="#onBtnSalvarClick" text="Adicionar" style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
        </HBox>
    </VBox>

    <Label text="Séries Cadastradas:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="tabelaSeries" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colNome" text="Nome" prefWidth="400.0" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnExcluir" text="Excluir Selecionado" onAction="#onBtnExcluirClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
    </HBox>
</VBox>