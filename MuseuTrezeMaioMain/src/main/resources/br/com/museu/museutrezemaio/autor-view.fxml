<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.museu.controller.AutorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button onAction="#onBtnVoltarClick" text="&lt; Voltar" />
        <Label text="Gerenciamento de Autores">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
    </HBox>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Nome do Autor:" />
        <TextField fx:id="txtNome" promptText="Ex: Machado de Assis" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnSalvar" text="Adicionar" onAction="#onBtnSalvarClick" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
    </HBox>

    <TableView fx:id="tabelaAutores" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colNome" text="Nome do Autor" prefWidth="400.0" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnExcluir" text="Excluir Selecionado" onAction="#onBtnExcluirClick" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
    </HBox>

</VBox>